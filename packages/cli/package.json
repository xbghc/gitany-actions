{
  "name": "@gitany/cli",
  "version": "0.1.0",
  "description": "CLI for gitany projects.",
  "type": "module",
  "bin": {
    "gitcode": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --format=esm --target=node18 --sourcemap --outfile=dist/index.js --external:@gitany/gitcode --external:@gitany/shared --external:commander",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "start": "node dist/index.js"
  },
  "devDependencies": {
    "esbuild": "^0.21.5"
  },
  "dependencies": {
    "@gitany/gitcode": "workspace:*",
    "@gitany/shared": "workspace:*",
    "commander": "^14.0.0"
  },
  "engines": {
    "node": ">=18.17"
  }
}
