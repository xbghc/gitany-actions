{
  "name": "@gitany/core",
  "version": "0.1.0",
  "description": "Core utilities and types for GitAny monorepo",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "dev": "pnpm build && node dist/index.js",
    "build": "node ./scripts/build.mjs",
    "clean": "rm -rf dist",
    "lint": "eslint ."
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "dependencies": {
    "@gitany/gitcode": "workspace:*",
    "@gitany/shared": "workspace:*",
    "dockerode": "^4.0.8"
  },
  "devDependencies": {
    "esbuild": "^0.21.5",
    "@types/dockerode": "^3.3.43"
  },
  "engines": {
    "node": ">=18.17"
  }
}
