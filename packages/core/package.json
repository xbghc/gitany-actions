{
  "name": "@gitany/core",
  "version": "0.1.0",
  "description": "Core utilities and types for GitAny monorepo",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "pnpm build && node dist/index.js",
    "build": "node ./scripts/build.mjs",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "cleanup": "node ./scripts/cleanup.mjs",
    "test": "pnpm --filter @gitany/shared build && pnpm --filter @gitany/gitcode build && tsx tests/watch-issues-detect-new-comments.test.ts"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "dependencies": {
    "@xbghc/gitcode-cli": "workspace:*",
    "@gitany/gitcode": "workspace:*",
    "@gitany/shared": "workspace:*",
    "dockerode": "^4.0.8",
    "tar": "^7.4.3"
  },
  "devDependencies": {
    "esbuild": "^0.21.5",
    "@types/dockerode": "^3.3.43"
  },
  "engines": {
    "node": ">=18.17"
  }
}
