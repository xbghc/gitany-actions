{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022"],
    "types": ["node"],
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declarationMap": true,
    "inlineSources": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@gitany/*": ["packages/*/src"]
    }
  },
  "references": [
    { "path": "./packages/shared" },
    { "path": "./packages/gitcode" },
    { "path": "./packages/git-lib" },
    { "path": "./packages/core" },
    { "path": "./packages/cli" }
  ]
}
