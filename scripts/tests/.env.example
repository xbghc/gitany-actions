TEST_RUN_CHAT=
TEST_CHAT_KEEP_CONTAINER=
TEST_CHAT_VERBOSE=
TEST_SHOW_PROMPT=
TEST_ISSUE_INTERVAL=
TEST_PR_INTERVAL=
TEST_WATCH_DURATION=
TEST_INCLUDE_ISSUE_COMMENTS=
TEST_INCLUDE_PR_COMMENTS=

# PR 评论容器测试 (test-container-comment.mjs)
TEST_PR_NUMBER=
TEST_COMMENT_BODY=
TEST_CONTAINER_IMAGE=
